@import './quasar.variables'

a
  color $accent

p
  &:first-letter
    text-transform uppercase

.IHR_
  &label
    text-align right
    font-weight 500

  &errors-banner
    background-color $negative
    width 100%
    margin-top -1em
    & p
      font-size 14pt
      font-weight 500
      color white
      &:first-letter
        text-transform capitalize
      &:first-child
        margin-top 5pt

    & .q-btn__content > div
      font-weight 600

    &-animation-enter-active, &-animation-leave-active
      transition all .5s

    &-animation-enter, &-animation-leave-to
      height 0em

  &delikify
    color black
    text-decoration none
    font-weight 400
    /*
    &-animation-enter-active, &-animation-leave-active
      transition all .3s ease
    &-animation-enter, &-animation-leave-to
      height 0%
    &-animation-enter-to, &-animation-leave
      height auto

    */
#swagger-ui
  & .opblock-summary-path
    min-width 105px !important
  & .opblock-body
    overflow-x auto


@media only screen and (max-width: 480px) {
  .IHR_ &errors-banner & p {
    font-size: 12pt;
  }
  .IHR_ &errors-banner &-animation-enter,
  .IHR_ &errors-banner &-animation-leave-to {
    height: 0;
  }
}

@media only screen and (min-width: 481px) and (max-width: 768px) {
  .IHR_ &errors-banner & p {
    font-size: 16pt;
  }
  .IHR_ &errors-banner &-animation-enter,
  .IHR_ &errors-banner &-animation-leave-to {
    height: 1em;
  }
}

@media only screen and (min-width: 769px) {
  .IHR_ &errors-banner & p {
    font-size: 18pt;
  }
  .IHR_ &errors-banner &-animation-enter,
  .IHR_ &errors-banner &-animation-leave-to {
    height: 2em;
  }
}